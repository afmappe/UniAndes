package edu.uniandes.ecos.PSP2;

import java.util.Arrays;

public class Temp {
	private int count;
	private double xSum;
	private double ySum;
	private double xAvg;
	private double yAvg;

	public void LinearRegression(double[] xVals, double[] yVals) {
		if (xVals != null & yVals != null & xVals.length == yVals.length) {
			count = xVals.length;
			xSum = Arrays.stream(xVals).reduce(0, (x, y) -> x + y);
			ySum = Arrays.stream(yVals).reduce(0, (x, y) -> x + y);

			xAvg = xSum / count;
			yAvg = ySum / count;
			double a = Arrays.stream(xVals).reduce(0, (x, y) -> test(x, y));

			int o = 0;
		}
	}

	private double test(double a, double b) {
		double z = (Math.pow(a, 2)) + (Math.pow(b, 2));

		return z;
	}
}
